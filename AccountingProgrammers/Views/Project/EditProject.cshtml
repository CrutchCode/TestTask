@model DatabaseAccounting.Models.Project
<h2>Редагування проекта</h2>
<form method="post" asp-action="EditProject" asp-controller="Project">
    <div class="form-group">
        <label asp-for="ProjectName" class="control-label">Змінити імя проекта</label>
        <input type="text" asp-for="ProjectName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Змінити опис проекта</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateOfCreation" class="control-label">Змінити дату створення</label>
        <input type="date" asp-for="DateOfCreation" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Редагувати" class="btn btn-default" />
    </div>
</form>
