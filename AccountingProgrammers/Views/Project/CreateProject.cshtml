@model DatabaseAccounting.Models.Project
<h2>Створення проекта</h2>
<form method="post" asp-action="CreateProject" asp-controller="Project">
    <div class="form-group">
        <label asp-for="ProjectName" class="control-label">Проект</label>
        <input type="text" asp-for="ProjectName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Опис проекта</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateOfCreation" class="control-label">Дата створення</label>
        <input type="date" asp-for="DateOfCreation" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Створити" class="btn btn-default" />
    </div>
</form>